			<!-- SIGN UP -->
			<form asp-area="" asp-controller="Account" asp-action="Register" method="post" class="col align-items-center flex-col sign-up">
				<div class="form-wrapper align-items-center">
					<div class="form sign-up">
						<div class="input-group">
							<i class='bx bxs-user'></i>
							<input name="UserName" type="text" placeholder="User Name">
						</div>
						<div class="input-group">
							<i class='bx bx-mail-send'></i>
							<input name="Email" type="email" placeholder="Email">
						</div>
						<div class="input-group">
							<i class='bx bxs-lock-alt'></i>
							<input name="Password" type="password" placeholder="Password">
						</div>
						<div class="input-group">
							<i class='bx bxs-lock-alt'></i>
							<input name="ConfirmPassword" type="password" placeholder="Confirm Password">
						</div>
						<button type="submit">
							Sign up
						</button>
						<p>
							<span>
								Already have an account?
							</span>
							<b onclick="toggle()" class="pointer">
								Sign in here
							</b>
						</p>
					</div>
				</div>

			</form>
			<!-- END SIGN UP -->
			<!-- SIGN IN -->
			<form asp-area="" asp-controller="Account" asp-action="Login" method="post" class="col align-items-center flex-col sign-in">
