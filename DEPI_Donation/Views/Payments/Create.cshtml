@model DEPI_Donation.Models.Payment

@{
    ViewData["Title"] = "Create Payment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .form-container {
        background-color: #f0f4f8;
        padding: 30px;
        border-radius: 16px;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
        font-family: 'Segoe UI', sans-serif;
    }

    h1, h4 {
        font-weight: 600;
        text-align: center;
        margin-bottom: 20px;
    }

    .form-group label {
        font-weight: 500;
    }

    .form-control {
        border-radius: 10px;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.25);
        }

    .btn-primary {
        width: 100%;
        padding: 12px;
        border-radius: 12px;
        font-weight: 600;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            transform: translateY(-1px);
        }

    .text-danger {
        font-size: 0.9em;
        margin-top: 4px;
    }

    .container {
        padding-top: 30px;
    }
</style>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="form-container">
                <h1>Create Payment</h1>
                <h4>Fill the form below</h4>
                <hr />

                <form id="createPaymentForm">
                    <div class="form-group mb-3">
                        <label asp-for="PaymentMethod">Payment Method</label>
                        <input asp-for="PaymentMethod" class="form-control" id="PaymentMethod" />
                        <span class="text-danger" id="PaymentMethodError"></span>
                    </div>

                    <button type="submit" class="btn btn-primary">Create</button>
                </form>

                <div id="resultMsg" class="mt-3"></div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#createPaymentForm').on('submit', function (e) {
                e.preventDefault();
                $('.text-danger').text('');
                $('#resultMsg').html('');

                var formData = {
                    PaymentMethod: $('#PaymentMethod').val(),
                };

                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Create", "Payments")',
                    data: formData,
                    success: function (response) {
                        if (response.success) {
                            window.location.href = '@Url.Action("Index", "Payments")';
                        } else {
                            $("#resultMsg").html("<div class='alert alert-danger'>" + response.message + "</div>");
                        }
                    },
                    error: function () {
                        $("#resultMsg").html("<div class='alert alert-danger'>Something went wrong.</div>");
                    }
                });
            });
        });
    </script>
}
