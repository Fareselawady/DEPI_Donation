@model DEPI_Donation.Models.Donation

@{
    ViewData["Title"] = "Create Donation";
}

<h2>Create Donation</h2>

<form id="createDonationForm">
    <div class="form-group">
        <label asp-for="DonorId"></label>
        <input asp-for="DonorId" class="form-control" id="DonorId" type="number" />
    </div>

    <div class="form-group">
        <label asp-for="PaymentId"></label>
        <input asp-for="PaymentId" class="form-control" id="PaymentId" type="number" />
    </div>

    <div class="form-group">
        <label asp-for="ActivityId"></label>
        <input asp-for="ActivityId" class="form-control" id="ActivityId" type="number" />
    </div>

    <div class="form-group">
        <label asp-for="Amount"></label>
        <input asp-for="Amount" class="form-control" id="Amount" type="number" step="0.01" />
    </div>

    <div class="form-group">
        <label asp-for="DonationDate"></label>
        <input asp-for="DonationDate" class="form-control" id="DonationDate" type="date" />
    </div>

    <div class="form-group">
        <label asp-for="Status"></label>
        <select asp-for="Status" class="form-control" id="Status">
            <option value="Pending">Pending</option>
            <option value="Confirmed">Confirmed</option>
            <option value="Canceled">Canceled</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Create</button>
</form>

<div id="resultMsg" class="mt-3"></div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        $("#createDonationForm").submit(function (e) {
            e.preventDefault();

            var formData = {
                DonorId: $("#DonorId").val(),
                PaymentId: $("#PaymentId").val(),
                ActivityId: $("#ActivityId").val(),
                Amount: $("#Amount").val(),
                DonationDate: $("#DonationDate").val(),
                Status: $("#Status").val()
            };

            $.ajax({
                type: "POST",
                url: '@Url.Action("Create", "Donations")',
                data: formData,
                success: function (response) {
                    if (response.success) {
                        window.location.href = '@Url.Action("Index", "Donations")';
                    } else {
                        $("#resultMsg").html("<div class='alert alert-danger'>" + response.message + "</div>");
                    }
                },
                error: function () {
                    $("#resultMsg").html("<div class='alert alert-danger'>Something went wrong.</div>");
                }
            });
        });
    </script>
}
