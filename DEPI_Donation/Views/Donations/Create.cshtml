@model DEPI_Donation.Models.Donation

@{
    ViewData["Title"] = "Create Donation";
}

<h2>Create Donation</h2>

<form id="createDonationForm">
    <div class="form-group">
        <label asp-for="DonorId"></label>
        <input asp-for="DonorId" class="form-control" id="DonorId" type="number" />
    </div>

    <div class="form-group">
        <label for="PaymentId">Payment Method</label>
        <select id="PaymentId" name="PaymentId" class="form-control" required>
            <option value="">-- Select Payment Method --</option>
            @foreach (var payment in ViewBag.Payments as List<SelectListItem>)
            {
                <option value="@payment.Value">@payment.Text</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="ActivityId">Activity</label>
        <select id="ActivityId" name="ActivityId" class="form-control" required>
            <option value="">-- Select Activity --</option>
            @foreach (var activity in ViewBag.Activities as List<SelectListItem>)
            {
                <option value="@activity.Value">@activity.Text</option>
            }
        </select>
    </div>


    <div class="form-group">
        <label asp-for="Amount"></label>
        <input asp-for="Amount" class="form-control" id="Amount" type="number" step="0.01" />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Create</button>
</form>

<div id="resultMsg" class="mt-3"></div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        $("#createDonationForm").submit(function (e) {
            e.preventDefault();

            var formData = {
                DonorId: $("#DonorId").val(),
                PaymentId: $("#PaymentId").val(),
                ActivityId: $("#ActivityId").val(),
                Amount: $("#Amount").val(),
                DonationDate: $("#DonationDate").val(),
                Status: "Pending" 
            };

            $.ajax({
                type: "POST",
                url: '@Url.Action("Create", "Donations")',
                data: formData,
                success: function (response) {
                    if (response.success) {
                        window.location.href = '@Url.Action("Index", "Donations")';
                    } else {
                        $("#resultMsg").html("<div class='alert alert-danger'>" + response.message + "</div>");
                    }
                },
                error: function () {
                    $("#resultMsg").html("<div class='alert alert-danger'>Something went wrong.</div>");
                }
            });
        });
    </script>
}
